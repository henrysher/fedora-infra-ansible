## Management hardware
define hostgroup {
        hostgroup_name  phx2_mgmt_systems
        alias           phx2_mgmt_systems
        members         {% for host in vars['phx2_management_hosts']|sort %}{{host}}{% if not loop.last %},{% endif %} {% endfor %} 

}
